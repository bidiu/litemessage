{
  "files.exclude": {
      "**/.git": true,
      "**/.DS_Store": true,
      // exclude .js and .js.map files, 
      // when in a TypeScript project
      "**/*.js": { "when": "$(basename).ts"},
      "**/*.js.map": true,
      "**/*.css.map": true,
  },
  "editor.tabSize": 2,
  "files.insertFinalNewline": true,
}
